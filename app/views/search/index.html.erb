<h1 class="text-center"><%= pluralize(@blogs.count, "Result") %></h1>
<div class="container">
	<table class="table table-dark table-striped">
		<thead>
			<tr>
				<th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
                <th><%= sort_link(@query, :body, "Blog Content") %></th>
                <th><%= sort_link(@query, :user_name, "Users") %></th>
			</tr>
		</thead>
		<tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= link_to blog.title, blog %></td>        
          <td><%= blog.body.to_plain_text.truncate_words(25) %></td>
          <td><%= link_to blog.user.name, blog.user %></td>
        </tr>
      <% end %>
    </tbody>
	</table>
</div>